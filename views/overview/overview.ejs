<%- include('../partials/header'); %>

<body>
  <%- include('../partials/navbar'); %>
  <h1 class="display-5 m-4 text-center font-weight-bolder">Project Details</h1>
  <div class=" container bg-light form p-3 mb-5">
    <%- include('../partials/detailbar') %>
    <div class="card mt-4">
      <div class="card-body">
          <h5 class="card-title font-weight-bolder">Issue Tracking</h5>
          <ul class="list-group">
              <% issues.forEach(item => { %>
              <li class="list-group-item d-flex justify-content-between align-items-center border-0">
                  <%=item.tracker%>
                  <span class="font-weight-bold" >
                      <%=item.totalopen%> Open / <%= item.total %> Total
                  </span>
              </li>
              <% }) %>
          </ul>
      </div>
  </div>
    <ul class="list-group list-group-flush mt-4 shadow-sm border-0">
      <li class="list-group-item border-0 font-weight-bolder">Members</li>
     <% members.forEach(member => { %>
      <li class="list-group-item border-0"><%= member.fullname %></li>
      <% }) %>
    </ul>
  </div>
</body>
<%- include('../partials/footer'); %>